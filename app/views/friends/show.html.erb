
<div class="jumbotron">
  <h1 class="display-4">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h1>
  <p class="lead">
    <%= @friend.email %>  | 
    <%= @friend.phone %>  |  
    <%= @friend.facebook %>

  </p>
  <br/>
<div class="d-flex">
  <%= link_to 'Edit', edit_friend_path(@friend), class: "btn btn-secondary" %>
  <%= button_to "Delete", @friend, method: :delete, class: "btn btn-danger mx-2" %>
  <%= link_to 'Back', friends_path, class: "btn btn-dark" %>
</div>

</div>


